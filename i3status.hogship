general {
    colors = true
	color_good = "#87df5f"
	color_degraded = "#dfff87"
	color_bad = "#ff5f5f"
    interval = 1
    output_format = "i3bar"
}

order += "disk /"
order += "ethernet eth0"
order += "ethernet eth1"
order += "cpu_usage"
order += "time"


disk "/" {
	format = "%free"
}

ethernet eth0 {
    # if you use %speed, i3status requires root privileges
    format_up = "%ip (%speed)"
	format_down = ""
}

ethernet eth1 {
    # if you use %speed, i3status requires root privileges
    format_up = "%ip (%speed)"
	format_down = ""
}

time {
	format = "%a %d.%m.%Y [%H:%M]"
}

cpu_usage {
	format = "CPU: %usage"
}

